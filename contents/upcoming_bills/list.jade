div.events
	each item in data.results
		div.listitem(style="overflow: hidden; height: 200px")
			div.row.nomargin(style="height: 100%")
				div(style="float: left; width: 70%")
					h6.nomargin
						a(href="#", onClick='repoView("' + item.full_name + '")', style="color: white; text-decoration: none")
							= item.legislative_day
					p.nomargin
						h6(style="color: white")= (item.context ? item.context : "No Content")
				div(style="float: left; width: 30%")
					div(style="float: right; text-align: right")
						h6.nomargin(style="color: white")= "Scheduled at "
							h6= item.scheduled_at
						h6.nomargin(style="color: white") 
							a(href=item.url, style="color: white; ")= "Link to the bill"